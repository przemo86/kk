<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>GridMonitor</display-name>
	<context-param>
		<description>
		Vaadin production mode</description>
		<param-name>productionMode</param-name>
		<param-value>false</param-value>
	</context-param>

	<!-- ####################################### -->
	<!-- APLIKACJA VAADIN -->
	<!-- ####################################### -->
	<servlet>
		<servlet-name>Gridmonitor Application</servlet-name>
		<servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet</servlet-class>
		<init-param>
			<description>
			Vaadin application class to start</description>
			<param-name>application</param-name>
			<param-value>pl.edu.agh.GridmonitorApplication</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>Gridmonitor Application</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>


	<!-- ####################################### -->
	<!-- OBSŁUGA SUBSKRYPCJI -->
	<!-- ####################################### -->
	<servlet>
		<servlet-name>subscription</servlet-name>
		<servlet-class>pl.edu.agh.SubscriptionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>subscription</servlet-name>
		<url-pattern>/subscription/*</url-pattern>
	</servlet-mapping>

	<!-- ####################################### -->
	<!-- RESTFUL WEB SERVICES -->
	<!-- ####################################### -->

	<servlet>
		<servlet-name>Jersey REST Service</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>pl.edu.agh.rest</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Jersey REST Service</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>


	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>
